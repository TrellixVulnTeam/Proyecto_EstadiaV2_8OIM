<section class="contact services">
    <h1 class="heading">Registrar nuevos<span> docentes</span> </h1>

    <div class="box-container">

        <section class="centrado">

            <div class="box">

                <form action="/users/signup" method="POST">


                    <input type="text" class="box" name="name" placeholder="Nombre">
                    <input type="email" class="box" name="email" placeholder="E-mail">
                    <input type="password" class="box" name="password" placeholder="Constraseña">
                    <input type="password" class="box" name="confirm_password" placeholder="Confirmar Constraseña">

                    <select name="rango">
                        <option selected>Seleccionar el rango:</option>
                        <option value="Maestro">Maestro</option>
                        <option value="Director">Director</option>
                    </select>

                    <select name="nivelA">
                        <option selected>Seleccionar el nivel académico:</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                    </select>

                    <select name="nivelI">
                        <option selected>Seleccionar el nivel investigación:</option>
                        <option value="A">A</option>
                        <option value="B">B</option>
                        <option value="C">C</option>
                    </select>

                    <div>
                        <button class="btn">
                            Registrar
                        </button>
                        <a href="javascript:history.back()" class="btn">Volver</a>
                    </div>

                </form>

            </div>

        </section>

    </div>

</section>
