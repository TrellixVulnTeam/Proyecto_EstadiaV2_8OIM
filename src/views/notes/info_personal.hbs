<section class="contact services">

    <h1 class="heading">Datos generales del Mtro. <span>{{user.name}}</span></h1>

    <div class="row">

        <div class="image">
            <img src="{{user.path}}" alt="Inserte una foto de perfil">
        </div>

        <form action="" style="background-color:#E5E8E8;">
            <h3 class="text-center">Formulario</h3>

            <h4>Nombre Completo</h4>
            <input type="text" placeholder="" class="box" value="{{user.name}}" readonly>
            <h4>Correo Institucional</h4>
            <input type="text" placeholder="" class="box" value="{{user.email}}" readonly>
            <h4>Direccion</h4>
            <input type="text" placeholder="" class="box" value="{{user.direccion}}" readonly>
            <h4>Puesto</h4>
            <input type="text" placeholder="" class="box" value="{{user.rango}}" readonly>
            <h4>Telefono</h4>
            <input type="text" placeholder="" class="box" value="{{user.telefono}}" readonly>
            <h4>Fecha de Ingreso</h4>
            <input type="text" placeholder="" class="box" value="{{user.createdAt}}" readonly>
            <h4>Nivel Academico</h4>
            <input type="text" placeholder="" class="box" value="{{user.nivelA}}" readonly>
            <h4>Nivel Investigacion</h4>
            <input type="text" placeholder="" class="box" value="{{user.nivelI}}" readonly>
            <h4>Status</h4>
            {{#if user.status}}
            <input type="text" class="form-control" value="Activo" readonly>
            {{else}}
            <input type="text" class="form-control" value="Inactivo" readonly>
            {{/if}}
            <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                <a href="javascript:history.back()" class="btn">Volver</a>
            </div>
        </form>
    </div>

</section>