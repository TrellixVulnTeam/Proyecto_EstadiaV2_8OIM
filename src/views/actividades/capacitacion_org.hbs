<section class="contact services">
    <h1 class="heading">Agregar<span> Capacitacion y organizacion</span></h1>

    <div class="box-container">
        <section class="centrado">
            <div class="box">
                <form action="/actividades/createCapacitacion" method="POST" enctype="multipart/form-data">
                    <h2>Capacitacion y Organizacion</h2>
                    <h1>Mtro. {{user.name}}</h1>
                    <br>

                    <h2><strong>Seleccionar un Tipo:</strong></h2>
                    <select value="tipo" value="{{tipo}}" name="tipo">
                        <option value="">Seleccionar un Tipo</option>
                        <option value="Curso" label="Curso">Curso</option>
                        <option value="Taller" label="Taller">Taller</option>
                        <option value="Diplomado" label="Diplomado">Diplomado</option>
                        <option value="Otro" label="Otro">Otro</option>
                    </select>

                    <h2><strong>Nombre:</strong></h2>
                    <input type="text" class="box" name="titulo" required>

                    <h2><strong>Instituci√≥n Impartida:</strong></h2>
                    <input type="text" class="box" name="institucion" required>

                    <h2><strong>Fecha de inicio:</strong></h2>
                    <input type="date" class="box" name="fecha_inicio" required>

                    <h2> <strong>Fecha de termino:</strong></h2>
                    <input type="date" class="box" name="fecha_termino" required>

                    <h2><strong>Seleccionar Categoria:</strong></h2>
                    <select value="categoria" value="{{tipo}}" name="categoria">
                        <option value="">Seleccionar Categoria:</option>
                        <option value="Disciplina" label="Disciplina">Disciplina</option>
                        <option value="Investigacion" label="Investigacion">Investigacion</option>
                        <option value="Pedagogia - Docentes" label="Pedagogia - Docentes">Pedagogia - Docentes</option>
                        <option value="Gestion o Habilidad" label="Gestion o Habilidad">Gestion o Habilidad</option>
                        <option value="TICCAP" label="TICCAP">TICCAP</option>

                    </select>

                    <h2 style="color: rgb(88, 151, 88);">Cargar Archivo</h2>
                    <input type="file" name="image" class="box">

                    <div>
                        <button class="btn">
                            Guardar
                        </button>
                        <a href="javascript:history.back()" class="btn">Volver</a>
                    </div>

                </form>
            </div>
        </section>

    </div>
</section>
