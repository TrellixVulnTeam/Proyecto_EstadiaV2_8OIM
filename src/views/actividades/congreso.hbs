<section class="services" id="services">

    <h1 class="heading">Nuevo<span> Congreso</span> </h1>

    <div class="box-container">
        <section class="centrado">
            <div class="box">
                <form action="/actividades/newCongreso" method="POST">
                    <h3>del Mtro. {{user.name}}</h3>

                    <h2><strong> Nombre del Congreso:</strong></h2>
                    <input type="text" class="box" name="titulo"> 

                    <h2><strong> Horas Totales:</strong></h2>
                    <input type="text" class="box" name="horas">

                    <h2><strong> Fecha de Inicio:</strong></h2>
                    <input type="date" class="box" name="fecha_inicio" required>

                    <h2><strong> Fecha de Termino:</strong></h2>
                    <input type="date" class="box" name="fecha_termino" required>

                    <h2> <strong> Nivel de Escolaridad:</strong></h2>
                    <input type="text" class="box" name="nivel_escolaridad" required>

                    <h2><strong> Area de Conocimiento:</strong></h2>
                    <input type="text" class="box" name="area_conocimineto" required>

                    <h2><strong> institucion:</strong></h2>
                    <input type="text" class="box" name="institucion" required>

                    <h2><strong> Año:</strong></h2>
                    <input type="date" class="box" name="año" required>
                    <div>
                        <button class="btn">
                            Guardar
                        </button>
                        <a href="javascript:history.back()" class="btn">Volver</a>
                    </div>
                </form>
            </div>
        </section>
    </div>

</section>
<!-- services section ends -->