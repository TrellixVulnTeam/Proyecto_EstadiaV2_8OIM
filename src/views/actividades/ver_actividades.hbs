<!-- services section starts  -->
<section class="services" id="services">

    <h1 class="heading"><span>Información</span> </h1>

    <div class="box-container">
        <section class="centrado">
            <div class="box">
                <div class="container">
                    <a href="javascript:history.back()" class="btn m-2">Volver</a>
                </div>

                <div class="actividad grid"
                    style="background-color:#b3aca7; margin-top:2rem; padding-bottom:2rem;border-radius:0.5rem">

                    {{#if actividad}}
                    <br>
                    <h1 class="heading">Articulos</h1>

                    <h2><strong> ISSN:</strong></h2>
                    <input type="text" class="box" value="{{actividad.issn}}" readonly>

                    <h2><strong> DOI:</strong></h2>
                    <input type="text" class="box" value="{{actividad.doi}}" readonly>

                    <h2><strong> Nombre del artículo:</strong></h2>
                    <input type="text" class="box" value="{{actividad.titulo}}" readonly>

                    <h2> <strong> Nombre revista:</strong></h2>
                    <input type="text" class="box" value="{{actividad.nom_revista}}" readonly>

                    <h2><strong> Título del artículo:</strong></h2>
                    <input type="text" class="box" value="{{actividad.titulo_revista}}" readonly>

                    <h2><strong> Año de publicación:</strong></h2>
                    <input type="date" class="box" value="{{actividad.fecha_publicacion}}" readonly>

                    <h2><strong> Área:</strong></h2>
                    <input type="text" class="box" value="{{actividad.area}}" readonly>

                    <h2><strong>Rol:</strong></h2>
                    <input type="link" class="box" value="{{actividad.rol}}" readonly>

                    <h2><strong>Descargar archivo:</strong> </h2>
                    <a download="" href="{{actividad.path}}" class="box3">Dowland CV <i class="fas fa-download"></i></a>
                    {{/if}}

                    {{#if libro}}
                    <br>

                    <h1 class="heading">Libro </h1> 

                    <h2><strong> ISBN:</strong></h2>
                    <input type="text" class="box" value="{{libro.isbn}}" readonly>

                    <h2><strong> Título del libro:</strong></h2>
                    <input type="text" class="box" value="{{libro.titulo}}" readonly>

                    <h2><strong> País:</strong></h2>
                    <input type="text" class="box" value="{{libro.pais}}" readonly>

                    <h2><strong> Idioma:</strong></h2>
                    <input type="text" class="box" value="{{libro.idioma}}" readonly>

                    <h2><strong> Año de publicación:</strong></h2>
                    <input type="date" class="box" value="{{libro.fecha_publicacion}}" readonly>

                    <h2> <strong> Editorial:</strong></h2>
                    <input type="text" class="box" value="{{libro.editorial}}" readonly>

                    <h2><strong> Edición:</strong></h2>
                    <input type="text" class="box" value="{{libro.edicion}}" readonly>

                    <h2><strong>Descargar archivo:</strong> </h2>
                    <a download="" href="{{libro.path}}" class="box3">Dowland CV <i class="fas fa-download"></i></a>

                    {{/if}}

                    {{#if caplibro}}
                    <br>

                    <h1 class="heading">Capitulo de libro </h1>

                    <h2><strong> ISBN:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.isbn}}" readonly>

                    <h2><strong> Título del libro:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.titulo}}" readonly>

                    <h2><strong> País:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.pais}}" readonly>

                    <h2><strong> Idioma:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.idioma}}" readonly>

                    <h2><strong> Año de publicación:</strong></h2>
                    <input type="date" class="box" value="{{caplibro.fecha_publicacion}}" readonly>

                    <h2> <strong> Editorial:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.editorial}}" readonly>

                    <h2><strong> Edición:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.edicion}}" readonly>

                    <h2><strong> Titulo del Capitulo:</strong></h2>
                    <input type="text" class="box" value="{{caplibro.titulo_capitulo}}" readonly>

                    <h2><strong> Numero del Capitulo:</strong></h2>
                    <input type="number" class="box" value="{{caplibro.num_capitulo}}" readonly>

                    <h2><strong> Pagina del Libro:</strong></h2>
                    <input type="number" class="box" value="{{caplibro.pag_Capitulo}}" readonly>

                    <h2><strong>Descargar archivo:</strong> </h2>
                    <a download="" href="{{caplibro.path}}" class="box3">Dowland CV <i class="fas fa-download"></i></a>

                    {{/if}}

                    {{#if reportetec}}
                    <br>

                    <h1 class="heading">Reporte Técnico </h1>

                    <h2><strong>Titulo:</strong></h2>
                    <input type="text" class="box" value="{{reportetec.titulo}}" readonly>

                    <h2><strong> Empresa o institucion:</strong></h2>
